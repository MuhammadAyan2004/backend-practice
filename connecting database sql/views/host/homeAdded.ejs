<%- include('../partials/head.ejs') %>
</head>

<body>

  <%- include('../partials/nav.ejs') %>

  <main class="min-h-screen bg-gray-100 p-8">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Hey Host! Here are your homes</h1>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% booking.forEach(home => { %>
      <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition">
        <img src="<%= home.photoUrl %>" alt="Home image" class="w-full h-48 object-cover">

        <div class="p-4 space-y-2">
          <h2 class="text-lg font-bold text-gray-800"><%= home.houseName %></h2>
          <p class="text-gray-600">📍 <%= home.location %></p>
          <p class="text-yellow-500">⭐ <%= home.rating %></p>
          <p class="text-blue-600 font-semibold">💰 $<%= home.price %> / night</p>
          <div class="flex gap-2">
            <a href="/host/edit-home/<%= home.id%>?editing=true" class="bg-green-700 text-white p-2 px-4 w-16 rounded-xl hover:bg-green-800">Edit</a>
            <form action="/host/delete/<%= home.id %>" method="POST">
              <button type="submit" class="bg-red-600 text-white p-2 w-24 rounded-xl hover:bg-red-700">Delete</button>
            </form>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </main>

</body>

</html>