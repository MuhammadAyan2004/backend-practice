<%- include('partials/head')%>
</head>
<body class="bg-black flex items-center justify-center min-h-screen font-sans">

  <div class="bg-white shadow-lg rounded-2xl p-8 max-w-md w-full">
    <!-- Header -->
    <header class="mb-6 text-center">
      <h1 class="text-2xl font-bold text-gray-800">Register Your Home</h1>
      <p class="text-gray-600 mt-2">
        Add your property to Airbnb and start hosting guests from around the world.
      </p>
    </header>

    <!-- Main -->
    <main>
      <form action="/add-home" method="post" class="space-y-4">
        <!-- House Name -->
        <div>
          <label for="userHome" class="block text-left text-gray-700 font-medium mb-1">Home Name</label>
          <input 
            type="text" 
            id="userHome" 
            name="userHome" 
            placeholder="Enter your house name" 
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:outline-none"
            required
          />
        </div>

        <!-- Submit -->
        <button 
          type="submit" 
          class="w-full bg-pink-500 hover:bg-pink-600 text-white py-2 rounded-lg font-medium transition">
          Submit
        </button>
      </form>

      <!-- Extra text -->
      <p class="text-sm text-gray-500 text-center mt-6">
        By registering, you agree to Airbnbâ€™s terms of service and hosting policies.
      </p>
    </main>
  </div>

</body>
</html>