<%- include('../partials/head.ejs') %>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <main class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
        <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
            <h1 class="text-2xl font-bold text-center text-gray-800 mb-6"> <%= editing ? 'edit' : 'register' %> your home here:</h1>
            <form action="<%= editing ? '/host/edit-home' : '/host/homeRegister' %>" method="post" class="space-y-4">
            <input type="hidden" name="id" value="<%= editing ? hom.id : '' %>">
            <input type="text" name="userName" placeholder="Enter your name" value="<%= editing ? hom.houseName : '' %>" required
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <input type="text" name="location" placeholder="Enter home location" value="<%= editing ? hom.location : ''  %>" required
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <input type="text" name="price" placeholder="Per night price" value="<%= editing ? hom.price : '' %>" required
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <input type="text" name="rating" placeholder="Rate it" value="<%= editing ? hom.rating : '' %>" required
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <input type="url" name="pic" placeholder="Enter your pic URL" value="<%= editing ? hom.photoUrl : '' %>" required
                class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <input type="submit" value="<%= editing ? 'Edit' : 'Submit' %>"
                class="w-full bg-blue-600 text-white font-semibold py-2 rounded-lg hover:bg-blue-700 transition" />
            </form>
        </div>
    </main>
</body>
</html>